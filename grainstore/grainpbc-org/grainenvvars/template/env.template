# ============================================================================

# ----------------------------------------------------------------------------
# AI & LLM APIs
# ----------------------------------------------------------------------------

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-EXAMPLE-FAKE-KEY-REPLACE-WITH-REAL

# Anthropic API Key (Claude)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-EXAMPLE-FAKE-KEY-REPLACE-WITH-REAL

# ----------------------------------------------------------------------------
# Blockchain & Crypto
# ----------------------------------------------------------------------------

# Internet Computer Principal
ICP_PRINCIPAL=xxxxx-xxxxx-xxxxx-xxxxx-xxxxx-xxxxx-xxxxx-xxxxx-xxx

# Solana Wallet Address (PUBLIC - safe to share)
SOLANA_WALLET_ADDRESS=EXAMPLE-ADDRESS-REPLACE-WITH-YOUR-WALLET

# ----------------------------------------------------------------------------
# Git & Version Control
# ----------------------------------------------------------------------------

# GitHub Personal Access Token
GITHUB_TOKEN=ghp_EXAMPLE-FAKE-TOKEN-REPLACE-WITH-REAL

# Git Author Info
GIT_AUTHOR_NAME=Your Name
GIT_AUTHOR_EMAIL=you@example.com

# ----------------------------------------------------------------------------
# Grain Network Services
# ----------------------------------------------------------------------------

# Grainweb
GRAINWEB_PORT=8080
GRAINWEB_HOST=localhost

# Grainmusic  
GRAINMUSIC_API_URL=http://localhost:3000

# GrainDisplay
GRAIN_DISPLAY_SCALE=1.0
GRAIN_NIGHT_LIGHT_TEMP=2000

# GrainWiFi
GRAIN_WIFI_PRIMARY=Starlink
GRAIN_WIFI_FALLBACK=TMobile

# ----------------------------------------------------------------------------
# Development
# ----------------------------------------------------------------------------

GRAIN_ENV=development
GRAIN_DEV_MODE=true
GRAIN_DEBUG=false

