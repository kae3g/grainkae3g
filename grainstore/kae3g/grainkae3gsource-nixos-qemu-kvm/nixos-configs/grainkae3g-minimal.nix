  users = {
    mutableUsers = false;
    users = {
      nixos = {
        isNormalUser = true;
        extraGroups = [ "wheel" "networkmanager" ];
        openssh.authorizedKeys.keys = [
          # Add your SSH public key here
          "ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAI... your-key-here"
        ];
      };
    };
  };

